<title> login_form</title>
<h1>Login Form</h1>
	<div class="row" data-controller="toggle">
		<div class="col-md-6 col-md-offset-3" >
			<%= form_with(url: login_path, scope: :session) do |form|%>
			<div id='login_page'> </div>
			<%= form.label :email%>
			<%= form.email_field :email, class: 'form-control'%><br>

			<%= form.label :password %>
			<%= link_to "(forgot password)", new_password_reset_path  %>
			<%= form.password_field :password, placeholder: "******", "data-target": "toggle.unhide",class: 'form-control'%>
			 <div> 
        <a data-target="toggle.show" data-action="click->toggle#password">show</a>
      </div><br>
			<%= form.label :remember_me, class: "checkbox inline" do %>
				<%= form.check_box :remember_me %>
				<span>Remember me on this computer</span>
			<% end %>

			<%= form.submit "Log In", class: "btn btn-primary"%>
			<%end%>


			<p> new user? <%= link_to "Sign up now!", signup_path, data: {controller: 'user-modal'}%></p>

		</div>
	</div>


